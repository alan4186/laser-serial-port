inline boolean endHandshake(int d) {
  if(hsCount < hsThresh){
    if(d == HIGH) { // if laser off
      hsCount = 0;
    } else { // if laser on
      hsCount = hsCount + 1;
    }
  } else {
    if(d == HIGH) { // if laser off
      Serial.println("HANDSHAKE DETECTED!");
      hsCount = 0;
      return true;
    } else { // if laser on
      return false;
    }
    
  }
}

